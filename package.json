{
	"name": "vserv-nextcloud",
	"version": "2.0.0",
	"description": "A nextcloud installation for nextcloud.avil.io",
	"config": {
		"service": "nextcloud"
	},
	"scripts": {
		"start": "doppler run -- docker-compose up --remove-orphans -d",
		"start:logs": "run-s start logs",
		"debug": "doppler run -- docker-compose up --remove-orphans",
		"stop": "doppler run -- docker-compose down",
		"restart:soft": "doppler run -- docker-compose restart",
		"restart": "npm stop && npm start",
		"restart:logs": "run-s restart logs:nxt",
		"logs": "doppler run -- docker-compose logs -f -t",
		"logs:nxt": "doppler run -- docker-compose logs -f ${npm_package_config_service}",
		"logs:db": "doppler run -- docker-compose logs -f db",
		"logs:cron": "doppler run -- docker-compose logs -f cron",
		"update": "npm stop && git pull && npm start",
		"update:docker": " run-s images:update restart",
		"images:update": "doppler run -- docker-compose pull",
		"images:cleanup": "docker image prune",
		"shell:nxt": "docker-compose exec -u www-data ${npm_package_config_service} bash",
		"shell:nxt:root": "docker-compose exec ${npm_package_config_service} bash",
		"shell:cron": "docker-compose exec -u www-data cron bash",
		"shell:cron:root": "docker-compose exec cron bash",
		"backup-s3-sync:now": "docker-compose exec backup-s3-sync /start.sh now",
		"backup-s3-sync:logs": "docker-compose exec backup-s3-sync grep CRON /var/log/syslog ",
		"exec:occ": "docker-compose exec -u www-data ${npm_package_config_service} ./occ",
		"occ:upgrade": "npm run exec:occ -- upgrade",
		"occ:maintenance-off": "npm run exec:occ -- maintenance:mode --off",
		"occ:maintenance-on": "npm run exec:occ -- maintenance:mode --on"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@bitbucket.org/bnware/vserv-nextcloud.git"
	},
	"author": "Benjamin Jesuiter <bjesuiter@gmail.com>",
	"license": "ISC",
	"homepage": "https://bitbucket.org/bnware/vserv-nextcloud#readme",
	"devDependencies": {
		"npm-run-all": "^4.1.5"
	}
}
