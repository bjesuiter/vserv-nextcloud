{
  "name": "vserv-nextcloud",
  "version": "0.0.1",
  "description": "A nextcloud installation for vserv.avil.io",
  "scripts": {
    "start": "docker-compose up --remove-orphans -d ",
    "start:logs": "npm start && npm run logs:nxt",
    "stop": "docker-compose down",
    "stop:rm": "docker-compose down -v",
    "restart": "docker-compose restart",
    "restart:logs": "docker-compose restart && npm run logs:nxt",
    "logs:nxt": "docker-compose logs -f nextcloud",
    "logs:cron": "docker-compose logs -f cron",
    "update": "npm stop && git pull && npm start",
    "rm:files-vol": "docker volume rm vserv-nextcloud_files",
    "rm:main-vol": "docker volume rm vserv-nextcloud_main",
    "shell:nxt": "docker-compose exec -u www-data nextcloud bash",
    "shell:nxt:root": "docker-compose exec nextcloud bash",
    "shell:cron": "docker-compose exec -u www-data cron bash",
    "shell:cron:root": "docker-compose exec cron bash",
    "exec:occ": "docker-compose exec -u www-data nextcloud occ"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/bnware/vserv-nextcloud.git"
  },
  "author": "Benjamin Jesuiter <bjesuiter@gmail.com>",
  "license": "ISC",
  "homepage": "https://bitbucket.org/bnware/vserv-nextcloud#readme",
  "devDependencies": {}
}
